// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Organisation model
model Organisation {
  id          String   @id @default(uuid())
  name        String
  description String?
  logoUrl     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  events      Event[]
  users       User[]
  invitations Invitation[]
  eventTags   EventTag[]
  scheduleItemTags ScheduleItemTag[]
  displays    Display[]

  @@map("organisations")
}

// Event model
model Event {
  id             String   @id @default(uuid())
  name           String
  description    String?
  organisationId String
  organisation   Organisation @relation(fields: [organisationId], references: [id], onDelete: Cascade)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  dayPlans       DayPlan[]
  tags           EventTag[] @relation("EventToEventTag")

  @@map("events")
}

// DayPlan model
model DayPlan {
  id        String   @id @default(uuid())
  eventId   String
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  name      String
  date      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  scheduleItems ScheduleItem[]

  @@map("day_plans")
}

// ScheduleItem model (supports all item types)
model ScheduleItem {
  id               Int      @id @default(autoincrement())
  dayPlanId        String
  dayPlan          DayPlan  @relation(fields: [dayPlanId], references: [id], onDelete: Cascade)
  time             String
  type             ScheduleItemType
  title            String
  speaker          String?
  location         String?
  details          String?
  materials        String?
  duration         String?
  snacks           String?
  facilitator      String?
  // Change tracking fields
  timeChanged      Boolean? @default(false)
  positionChanged  Boolean? @default(false)
  originalTime     String?
  originalPosition Int?
  // Position in schedule
  position         Int      @default(0)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  tags             ScheduleItemTag[] @relation("ScheduleItemToScheduleItemTag")

  @@map("schedule_items")
  @@index([dayPlanId, position])
}

enum ScheduleItemType {
  session
  workshop
  break
  announcement
  game
  transition
}

// Admin users (for authentication)
model AdminUser {
  id           String   @id @default(uuid())
  username     String   @unique
  passwordHash String
  email        String?  @unique
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("admin_users")
}

// Core user model scoped to an organisation
model User {
  id                      String        @id @default(uuid())
  organisationId          String
  organisation            Organisation  @relation(fields: [organisationId], references: [id], onDelete: Cascade)
  username                String
  email                   String
  passwordHash            String
  role                    UserRole      @default(member)
  emailVerified           Boolean       @default(false)
  emailVerificationToken  String?       @unique
  tokenExpiresAt          DateTime?
  createdAt               DateTime      @default(now())
  updatedAt               DateTime      @updatedAt
  sessions                Session[]

  @@unique([organisationId, username])
  @@unique([organisationId, email])
  @@map("users")
}

// Session for cookie-based auth
model Session {
  id         String   @id @default(uuid())
  token      String   @unique
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
  expiresAt  DateTime

  @@map("sessions")
}

enum UserRole {
  admin
  member
}

// Invitation model for pending user invitations
model Invitation {
  id                String   @id @default(uuid())
  organisationId    String
  organisation      Organisation @relation(fields: [organisationId], references: [id], onDelete: Cascade)
  email             String
  role              UserRole @default(member)
  token             String   @unique
  expiresAt         DateTime
  createdAt         DateTime @default(now())
  invitedBy         String   // username of the inviter

  @@unique([organisationId, email])
  @@map("invitations")
}

// EventTag model for event categorization
model EventTag {
  id             String   @id @default(uuid())
  name           String
  color          String   @default("#64748b") // Hex color for visual distinction
  organisationId String
  organisation   Organisation @relation(fields: [organisationId], references: [id], onDelete: Cascade)
  events         Event[]  @relation("EventToEventTag")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@unique([organisationId, name])
  @@map("event_tags")
}

// ScheduleItemTag model for schedule item categorization
model ScheduleItemTag {
  id             String   @id @default(uuid())
  name           String
  color          String   @default("#64748b") // Hex color for visual distinction
  organisationId String
  organisation   Organisation @relation(fields: [organisationId], references: [id], onDelete: Cascade)
  scheduleItems  ScheduleItem[] @relation("ScheduleItemToScheduleItemTag")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@unique([organisationId, name])
  @@map("schedule_item_tags")
}

// Display model for registered display screens
model Display {
  id               String        @id @default(uuid())
  organisationId   String?       // Can be null until paired
  organisation     Organisation? @relation(fields: [organisationId], references: [id], onDelete: Cascade)
  name             String        // User-friendly name for the display
  registrationCode String?       @unique // Temporary code for registration via URL
  codeExpiresAt    DateTime?     // Expiration for registration code
  pairingCode      String?       @unique // 6-digit pairing code from socket connection
  socketId         String?       // Socket.io connection ID
  status           DeviceStatus  @default(PENDING)
  isActive         Boolean       @default(false)
  currentDayPlanId String?       // Currently assigned day plan
  lastSeenAt       DateTime      @default(now()) // For monitoring
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt

  @@map("displays")
}

enum DeviceStatus {
  PENDING
  PAIRED
  ACTIVE
}
